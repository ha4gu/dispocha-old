<% if flash.any? %>

  <div id="flash_message">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= "#{message_type}" %>">
        <%= content_tag :div, message, class: "container" %>
      </div>
    <% end %>
  </div>

  <!-- <p class="notice"><%= notice %></p> -->
  <!-- <p class="alert"><%= alert %></p> -->

<% end %>
