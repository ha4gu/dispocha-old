<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/meta' %>

    <title><%= build_title(yield(:page_title)) %></title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <main>
      <%= render 'layouts/flash' %>
      <div class="container">
        <%= yield %>
      </div>
    </main>

  </body>
</html>
